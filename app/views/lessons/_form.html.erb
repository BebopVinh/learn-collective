<%= form_for lesson, html: {class:"pure-form"} do |f| %>
   <%= f.label :name %>
   <%= f.text_field :name %> <br><br>
   <span class="pure-form-message-inline">Be as accurate as possible with the name.</span> 
   <br>
   <br>
   
   <%= f.label :category %>
   <%= f.text_field :category %> <br><br>

   <%= f.label :section %>
   <%= f.text_field :section %> <br><br>

   <%= f.submit %>
<% end %>