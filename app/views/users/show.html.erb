<h1><%= @user.username %></h1>

<%= link_to "Edit Account", edit_user_registration_path, class: "pure-button button-warning" %>

<h3>My Contributions</h3>

<% @contributions.each do |c| %>
   <section class="post">
      <h2 class="content-subhead">From Lesson: <%= link_to c.lesson.name, lesson_path(c.lesson) %></h2>
            <div class="post-description"><%= sanitize parse_content(c.content) %></div>
      <p><%= update_buttons(c) %></p>
   </section>
<% end %>