
<div class="container">
<div class="center">
  <h2>Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "pure-form"})  do |f| %>
    <fieldset class="pure-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>

        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
    </fieldset>

      <div class="pure-controls">
      <% if devise_mapping.rememberable? %> 
          <%= f.check_box :remember_me, class: "pure-checkbox" %>
          <%= f.label :remember_me %>
      <% end %>

        <br>
        <%= f.submit "Log in", class: "pure-button pure-button-primary"%>
      </div>

  <% end %>

  <br><br>

  <%= render "devise/shared/links" %>
</div>
</div>

